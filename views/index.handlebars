<h3>*Refresh page to update list</h3>

<div class="container">
  <h2>Reading</h2>
<div class="row">
  <div class="col-6">
    <ul> 
      {{#each bookList}}
      {{#unless finished}}
      {{> bookList/book-block finish=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-6">
    <h2>Finished</h2>
     <ul>
      {{#each bookList}}
      {{#unless finished}}
      {{> bookList/book-block finish=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

{{!-- decide if finished and unfinished --}}
<div class="container">
  <div class="row">
    <div class="col">
<h2>Add Book</h2>
<form class="create-form">

  <div id="add" class="form-group">
    <label for="ca">Book Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="finished">Have you finished it</label><br>
    <input type="radio" name="finished" value="1" checked> Finished<br>
    <input type="radio" name="finished" value="0"> Reading
  </div>

  <button type="submit">Add Book</button>
</form>
